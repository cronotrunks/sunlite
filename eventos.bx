# Nuestra eurocalculadora personal y pública gracias a los ctcp's (con protección
# anti-flood)
#
on ^ctcp '% $N EURO *' {
  @ Flood = ([$Flood] +1)
  if ( [$Sonido] == 1 ) { exec bplay ~/.BitchX/sunlite/sonidos/ctcp.wav 2> /dev/null }
  if ( [$Flood] <= 5 ) {
    @ Ptas = [$3-] * 166.386
    notice $N CTCP EURO de $0
    eval notice $0 $3- Euros = $Ptas ptas } }

on ^ctcp '% $N PESETA *' {
  @ Flood = ([$Flood] +1)
  if ( [$Sonido] == 1 ) { exec bplay ~/.BitchX/sunlite/sonidos/ctcp.wav 2> /dev/null }
  if ( [$Flood] <= 5 ) {
    @ Euro = [$3-] / 166.386
    notice $N CTCP PESETA de $0
    eval notice $0 $3- ptas = $Euro Euros } }

on ^ctcp '% $N VERSION *' {
  @ Flood = ([$Flood] +1)
  if ( [$Sonido] == 1 ) { exec bplay ~/.BitchX/sunlite/sonidos/ctcp.wav 2> /dev/null }
  if ( [$Flood] <= 5 ) {
    notice $N CTCP VERSION de $0
    notice $0 $J } }

on ^ctcp '% $N FORTUNE' {
  @ Flood = ([$Flood] +1)
  if ( [$Sonido] == 1 ) { exec bplay ~/.BitchX/sunlite/sonidos/ctcp.wav 2> /dev/null }
  if ( ( [$Flood] <= 5 ) && ( [$0] == [$N] ) ) {
    notice $N CTCP FORTUNE de $0
    window swap $3
    exec -o /usr/games/fortune } }

on ^ctcp '% $N SOUND' {
  if ( [$Ctcp_mp3] == 1 ) { 
    ignore $0 CTCPS
  } {
    notice $N CTCP SOUND $1- de $0 } }
 
