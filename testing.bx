alias mass {
  usleep 2
  for (@ i = 1, i <= [$total], @ i++ ) { 
    msg $winnam($i) $0- } }

alias arcoiris {
  @ Mensaje = [$0-]
  @ Counter = [$absstrlen([$Mensaje])]
  @ Colorin = 1
  for (@ i = 0, i < [$Counter], @ i++ ) {
    @ Mensaje_tmp = [$Mensaje_tmp] ## [$mid($i 1 $Mensaje)] ## [$Colorin]
    if ( [$Colorin] < 16 ) {
      @ Colorin = ([$Colorin] + 1) 
    } {
      @ Colorin = 1 }
    }
  send $Mensaje_tmp
  @ Mensaje_tmp = []
}

alias sistema {
  exec -o echo -e "«Info SYS» ··» `uname -a`"
  sleep 1 
  exec -o echo -e "«Info CPU» ··» `cat /proc/cpuinfo | grep "model name" | gawk '{ print $4 " " $5 " " $6 }'` ## `cat /proc/cpuinfo | grep MHz | gawk '{ print $4 " Mhz"}'` ## `cat /proc/cpuinfo | grep cache | gawk '{ print $4 " Kb caché" }'` ## `cat /proc/cpuinfo | grep bogomips | gawk '{ print $3 " bogomips"}'`"
  sleep 1
  exec -o echo -e "«Info MEM» ··» `cat /proc/meminfo | grep MemTotal: | gawk '{ print "Memoria total: "$2 " Kb" }'` ## `cat /proc/meminfo | grep MemFree: | gawk '{ print "Memoria libre: " $2 " Kb"}'` ## ` cat /proc/meminfo | grep SwapTotal: | gawk '{ print "Swap total: " $2 " Kb"}'` ## `cat /proc/meminfo | grep SwapFree: | gawk '{ print "Swap libre: " $2 " Kb"}'`"
  sleep 1
  exec -o echo -e "«Info UPT» ··»`uptime`"
}
